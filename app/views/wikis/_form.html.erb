<h4>Add a Wiki</h4>
<%= form_for wiki do |f| -%>
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: "Enter body" %>
  </div>
  <div class="form-group">
    <%= f.check_box :private %>
    <%= f.label :private %>
    <%= f.submit "Save", class: 'btn btn-success pull-right' %>
  </div>
<% end -%>