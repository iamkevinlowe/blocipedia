<h1 class="text-center">Edit Wiki</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| -%>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body" %>
      </div>
      <div class="form-group">
        <%= f.check_box :private %>
        <%= f.label :private %>
        <%= f.submit "Update", class: 'btn btn-success pull-right' %>
      </div>
    <% end -%>
  </div>
</div>